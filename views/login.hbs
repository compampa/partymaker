<div class="loginFormContainer">

  <div class="alert alert-danger" id="alert" role="alert">
    Вы уже зарегистрированы, попробуйте залогиниться!
  </div>

  {{#if opa}}
  <div class="alert alert-danger" role="alert">
    {{opa}}
  </div>
  {{/if}}
  {{#if wrongPassword}}
  <div class="alert alert-danger" role="alert">
    {{wrongPassword}}
  </div>
  {{/if}}
  <form name="login" action="/login" method="post" class="formLogin">
    <div class="inputValue">
      <label for="exampleInputEmail1" class="form-label">Логин</label>
      <input type="text" class="inputValue" id="exampleInputEmail1" aria-describedby="emailHelp" name="login">
    </div>
    <div class="inputValue">
      <label for="exampleInputPassword1" class="form-label">Пароль</label>
      <input type="password" class="inputValue" id="password" name="password">
    </div>
    <button type="submit" class="loginBtn loginBtnIn">Залогиниться</button>
  </form>
</div>
